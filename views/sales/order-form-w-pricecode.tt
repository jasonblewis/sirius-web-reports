<script src="/javascripts/datatablesdisplay.js"></script>
<h2>Order Form W Pricecode</h2>
<br />

[% INCLUDE datatables_buttons.tt %]    
<div id="loader" class="loader">Loading...</div>
<script>
 $(document).ajaxStart(function ()
     {
	 $('#loader').addClass('loader');

     }).ajaxComplete(function () {
	 
	 $('#loader').removeClass('loader');
	 
     });
 
 $( document ).ready( function( $ ) {
     $.ajax({
         "url": '[% json_data_url %]',
         "success": function(myjson) {
             var tableHeaders = '';  // should be at least the empty string first time through
	     $.each(myjson.columns, function(i, val){
                 tableHeaders += "<th>" + val.data + "</th>";
             });
             $("#tableDiv").html('<table id="displayTable" class="display compact" cellspacing="0"><thead><tr>' + tableHeaders + '</tr></thead></table>');
	     
	     myjson.dom = 'Bfrtip';
	     myjson.buttons = ['copy',
			       'csv',
			       'excel',
			       {extend: 'pdfHtml5',
				text: 'PDF',
				orientation: 'landscape',
				pageSize: 'A4',
				download: 'download',
				filename: '*',
				extension: 'pdf'
			       },
			       'print'];

             console.log(myjson);

             $('#displayTable').DataTable(myjson);
         },
         "dataType": "json",
     });
 });
</script>


<div id="tableDiv"></div>
